---
import { Zap, EyeOff, Terminal, Puzzle } from "lucide-react";
import { agentFeatures } from "../data/content.ts";

const icons = [Zap, EyeOff, Terminal, Puzzle];
---

<section class="relative pb-28 px-6 lg:px-12">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-extrabold tracking-tight mb-4">Built for Autonomous Systems</h2>
      <p class="text-muted text-lg max-w-xl mx-auto">AI agents run without supervision. Their environment config can't be wrong.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {agentFeatures.map((feature, i) => (
        <div class="glass-card glass-hover rounded-2xl p-7">
          {() => {
            const Icon = icons[i];
            return (
              <div class="w-10 h-10 rounded-xl bg-secondary/10 border border-secondary/10 flex items-center justify-center mb-5">
                <Icon className="w-5 h-5 text-secondary" strokeWidth={1.5} />
              </div>
            );
          }}
          <h3 class="text-primary font-semibold text-base mb-2">{feature.headline}</h3>
          <p class="text-muted text-sm leading-relaxed" set:html={feature.description.replace(/\{\{(\w+)\}\}/g, '<code class="text-secondary/90 bg-secondary/10 px-1.5 py-0.5 rounded text-xs font-mono">$1</code>')} />
        </div>
      ))}
    </div>
  </div>
</section>
