---
import { getPrevNext } from "@/data/docs-nav";

interface Props {
  currentSlug: string;
}

const { currentSlug } = Astro.props;
const { prev, next } = getPrevNext(currentSlug);
---

<footer class="mt-16 pt-8 border-t border-border flex items-center justify-between gap-4">
  {prev ? (
    <a
      href={prev.slug === "" ? `${import.meta.env.BASE_URL}/docs` : `${import.meta.env.BASE_URL}/docs/${prev.slug}`}
      class="group flex flex-col items-start gap-1 text-sm hover:text-secondary transition-colors"
    >
      <span class="text-xs text-muted group-hover:text-secondary/70 transition-colors">&larr; Previous</span>
      <span class="font-medium">{prev.title}</span>
    </a>
  ) : <div />}
  {next ? (
    <a
      href={next.slug === "" ? `${import.meta.env.BASE_URL}/docs` : `${import.meta.env.BASE_URL}/docs/${next.slug}`}
      class="group flex flex-col items-end gap-1 text-sm hover:text-secondary transition-colors text-right"
    >
      <span class="text-xs text-muted group-hover:text-secondary/70 transition-colors">Next &rarr;</span>
      <span class="font-medium">{next.title}</span>
    </a>
  ) : <div />}
</footer>
