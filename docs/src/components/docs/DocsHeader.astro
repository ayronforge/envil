---
import { ThemeToggle } from "./ThemeToggle";
import { MobileNav } from "./MobileNav";
import { docsNav } from "@/data/docs-nav";

interface Props {
    currentSlug: string;
}

const { currentSlug } = Astro.props;
---

<header
    class="sticky top-0 z-30 h-16 flex items-center justify-between px-4 lg:px-6 border-b border-border bg-background/95 backdrop-blur-sm"
>
    <div class="flex items-center gap-3">
        <MobileNav
            client:load
            sections={docsNav}
            currentSlug={currentSlug}
            baseUrl={import.meta.env.BASE_URL}
        />
        <a href={import.meta.env.BASE_URL} class="flex items-center gap-2">
            <img
                src={`${import.meta.env.BASE_URL}/icon.svg`}
                alt="envil"
                class="h-6"
                data-theme-visible="light"
            />
            <img
                src={`${import.meta.env.BASE_URL}/icon-light.svg`}
                alt="envil"
                class="h-6"
                data-theme-visible="dark"
            />
        </a>
        <span
            class="text-xs font-medium px-2 py-0.5 rounded-md bg-secondary/10 text-secondary border border-secondary/20"
        >
            Docs
        </span>
    </div>
    <div class="flex items-center gap-2">
        <a
            href={import.meta.env.BASE_URL}
            class="text-sm text-muted hover:text-primary transition-colors hidden sm:block"
        >
            Home
        </a>
        <a
            href="https://github.com/ayronforge/envil"
            class="text-sm text-muted hover:text-primary transition-colors hidden sm:block"
            target="_blank"
            rel="noopener noreferrer"
        >
            GitHub
        </a>
        <ThemeToggle client:load />
    </div>
</header>
