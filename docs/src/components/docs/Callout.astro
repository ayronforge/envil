---
import { Info, Lightbulb, TriangleAlert, CircleX } from "lucide-react";

interface Props {
  type?: "note" | "tip" | "warning" | "danger";
  title?: string;
}

const { type = "note", title } = Astro.props;

const icons = { note: Info, tip: Lightbulb, warning: TriangleAlert, danger: CircleX } as const;
const Icon = icons[type];

const defaultTitles: Record<string, string> = {
  note: "Note",
  tip: "Tip",
  warning: "Warning",
  danger: "Danger",
};
---

<div class={`callout callout-${type}`}>
  <div class="callout-title">
    <Icon size={16} />
    {title || defaultTitles[type]}
  </div>
  <div class="text-sm leading-relaxed [&>p]:mb-2 [&>p:last-child]:mb-0">
    <slot />
  </div>
</div>
