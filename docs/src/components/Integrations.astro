---
import { secretManagers } from "../data/content.ts";
import CodeBlock from "./CodeBlock.astro";
---

<section class="relative pb-28 px-6 lg:px-12">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
            <h2 class="text-3xl sm:text-4xl font-extrabold tracking-tight mb-4">
                Integrations
            </h2>
            <p class="text-muted text-lg max-w-xl mx-auto">
                Resolve environment variables directly from your cloud
                provider's secret manager. No .env files in production.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {
                secretManagers.map((sm, i) => (
                    <div class="glass-card glass-hover rounded-2xl p-5 flex flex-col">
                        <div class="flex items-center gap-3 mb-4">
                            <img
                                src={sm.icon}
                                alt={sm.name}
                                class="w-5 h-5 shrink-0"
                            />
                            <h3 class="text-primary font-semibold text-sm">
                                {sm.name}
                            </h3>
                        </div>
                        <div class="mt-auto">
                            <CodeBlock code={sm.code} />
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
