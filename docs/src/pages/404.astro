---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="404 â€” Page Not Found"
  bodyClass="bg-background text-primary font-sans antialiased"
>
  <div class="min-h-screen flex flex-col">
    <Navbar />
    <main class="flex-1 flex items-center justify-center px-6">
      <div class="text-center">
        <p class="font-display text-8xl md:text-9xl font-bold text-secondary">404</p>
        <h1 class="mt-4 font-display text-2xl md:text-3xl font-semibold text-primary">Page not found</h1>
        <p class="mt-3 text-muted max-w-md mx-auto">The page you're looking for doesn't exist or has been moved.</p>
        <div class="mt-8 flex items-center justify-center gap-6">
          <a
            href={import.meta.env.BASE_URL}
            class="text-secondary hover:text-secondary/80 font-medium transition-colors"
          >
            Back to Home
          </a>
          <a
            href={`${import.meta.env.BASE_URL}/docs`}
            class="text-muted hover:text-primary font-medium transition-colors"
          >
            Browse Docs
          </a>
        </div>
      </div>
    </main>
    <Footer />
  </div>
</Layout>
