{
  "name": "@ayronforge/better-env",
  "version": "0.5.3",
  "description": "Type-safe environment variable validation using Effect Schema",
  "keywords": [
    "effect",
    "env",
    "environment",
    "schema",
    "type-safe",
    "typescript",
    "validation"
  ],
  "homepage": "https://github.com/ayronforge/better-env#readme",
  "bugs": {
    "url": "https://github.com/ayronforge/better-env/issues"
  },
  "license": "MIT",
  "author": "Pedro Toledo",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayronforge/better-env.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./presets": {
      "types": "./dist/presets.d.ts",
      "import": "./dist/presets.js"
    },
    "./aws": {
      "types": "./dist/resolvers/aws.d.ts",
      "import": "./dist/resolvers/aws.js"
    },
    "./azure": {
      "types": "./dist/resolvers/azure.d.ts",
      "import": "./dist/resolvers/azure.js"
    },
    "./gcp": {
      "types": "./dist/resolvers/gcp.d.ts",
      "import": "./dist/resolvers/gcp.js"
    },
    "./1password": {
      "types": "./dist/resolvers/onepassword.d.ts",
      "import": "./dist/resolvers/onepassword.js"
    }
  },
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build src/index.ts src/presets.ts src/resolvers/aws.ts src/resolvers/azure.ts src/resolvers/gcp.ts src/resolvers/onepassword.ts --outdir dist --format esm --packages external --sourcemap=linked",
    "build:types": "tsgo --noEmit false --declaration --emitDeclarationOnly --outDir dist --rootDir src",
    "prepublishOnly": "bun run build",
    "typecheck": "tsgo --noEmit",
    "lint": "oxlint --type-aware ./src",
    "lint:fix": "oxlint --type-aware --fix ./src",
    "fmt": "oxfmt ./src",
    "fmt:check": "oxfmt --check ./src",
    "check": "bun run lint:fix && bun run fmt",
    "test": "bun test",
    "test:coverage": "bun test --coverage"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "^25.2.1",
    "@typescript/native-preview": "^7.0.0-dev.20260205.1",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.0"
  },
  "peerDependencies": {
    "@1password/sdk": "^0.3.1",
    "@aws-sdk/client-secrets-manager": "^3.984.0",
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "@google-cloud/secret-manager": "^6.1.1",
    "effect": "^3.19.11"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-secrets-manager": {
      "optional": true
    },
    "@azure/keyvault-secrets": {
      "optional": true
    },
    "@azure/identity": {
      "optional": true
    },
    "@google-cloud/secret-manager": {
      "optional": true
    },
    "@1password/sdk": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  }
}
